{
    "compilerOptions": {
      "outDir": "dist",
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": false,
      "strict": true,
      "module": "ESNext",
      "target": "ES2020",
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/main.tsx", "src/App.tsx"]
  }
  